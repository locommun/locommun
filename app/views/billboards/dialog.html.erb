
<div class="billboard-controlls well">

	<h1>Paten-Gesuch von <%= @dialog.user.name %></h1>

	<p><%= @dialog.text %></p>
	 
	 <%if user_signed_in? && @dialog.user != current_user && @dialog.godfather != current_user && !(@dialog.godfather)%>
	 	<%= link_to "Patenschaft annehmen", {:controller => "billboards", :action => "dialog_accept", :id => @dialog.id } , :class=>"btn btn-primary" %>
	 <%elsif @dialog.godfather %>
	 	<h3>Die Patenschaft wurde von <%= @dialog.godfather.name%> angenommen.</h3>
	 <%end%>
</div>

<% @dialog.dialogcomments.each do |dialogcomment| %>
	<div class="well">
			<strong><Anonym><%= dialogcomment.user.name %>:</strong> <%= dialogcomment.text %>
	</div>
<%end%>


	<div class="well">	
		<a href="/billboards/description#pate">Mehr Informationen zum Thema Patenschaft</a>
		<hr />
		<%= simple_form_for(@dialog.dialogcomments.build) do |f| %>
		
		  <div class="form-inputs">
		    <%= f.input :text ,:label => "Schreibe eine Nachricht:" , :required => false , :input_html => {:rows => 7 }%>
		  	
		  	<%= f.input :dialog_id , :as => :hidden%>

		  </div>
		
		  	<%= f.submit "Abschicken" , :class => "btn btn-primary"%>
		  
		<% end %>
	</div>
	<%if @dialog.billboard%>
		<%= link_to "Zur Litfaßsäule", billboard_path(:id => @dialog.billboard.id) ,:class => "btn btn-primary" %>
	<%end%>
