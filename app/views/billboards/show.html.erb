<div class="row">
	<div class="span2">
		<h2><%= @billboard.name %></h2>
		<p>
			<%= @billboard.description %>
		</p>
		<%= gmaps({ 
			"map_options" => { "container_class" => "minimap_container", "id" =>  "minimap","auto_adjust" => true , "zoom" => 14,"auto_zoom" => false},
			"markers" => {"data" => @json}
			}) %> 
		
		<p>
			<p style="font-size:xx-small;">
			<b>Lat:</b>
			<%= @billboard.latitude %></span>
			<p style="font-size:xx-small;">
			<b>Long:</b>
				<%= @billboard.longitude %>
			</span>
		</p>
		<p>
			<% if @billboard.user == current_user %>
				<strong>
					<%=link_to "Aushang drucken", billboard_path(:id => @billboard.id, :format => :pdf), :class => "btn" %>
				</strong>
			<%end%>
		</p>
		
	</div>
	<div class="span10">
		
		<% @billboard.announcements.each do |announcement| %>
		<div class="span2">
			<div class="well">
			<h3><%= link_to  announcement.name , announcement %></h3>
			<p>
				<%= announcement.description %>
			</p>
			
			</div>
		</div>
		<%end%>
		<% if @billboard.user == current_user ||
			 current_user && BillboardActivation.where(:user_id => current_user.id, :billboard_id => @billboard.id).first %>
			<div class="span2">
				<div class="well">
					<%= link_to "Neue Anzeige" , new_announcement_path(:billboard_id => @billboard.id)%>
				</div>
			</div>
		<% end %>
	</div>
</div>

<%if current_user && @billboard.user == current_user%>
	<%= link_to 'Editieren', edit_billboard_path(@billboard) %> |
<%end%>
