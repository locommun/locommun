
.row

  -# project overview
  .span7
    = link_to 'Edit', edit_project_path(@project)
    |
    = link_to 'Back', projects_path
    %h3= @project.title
    %p= @project.description
    = render 'partial/mini_map'
  .span1

  .span4
    -if @project.image.present?
      = image_tag @project.image.url(:thumb)

  .span12
    %hr
    -#project chat
    .span4

      = semantic_form_for(@project.comments.build, :url => project_comments_path(@project), :html=> {:class => "form-fit"}) do |f|
        = f.inputs do
          - if !user_signed_in?
            = f.input :name, :required => true, :label => false, :placeholder => "Name"
          - else
            = f.input :name, :as => :hidden, :label => false, :input_html => { :value => current_user.name ,:readonly => true }
          = f.input :text, :required => true ,  :label => false, :placeholder => "Kommentar schreiben"
        = f.actions do
          = f.action :submit

      -@project.comments.order("created_at DESC").each do |comment|
        .alert.alert-info
          = comment.created_at
          -if comment.name
            %b= comment.name + ": "
          = comment.text
    .span6
      -# organization tools
      %h3= t('project.organization')
      -if @project.datetime
        -#=render '/projects/datetime'
      -if user_signed_in?
        -#=render '/projects/datetime_suggestion'

      -# sponsoring, crowdfounding, other features
      %h3= t('project.support')

      %p= t('project.under-construction')
      
      = form_for :sponsor_finder, :url => sponsor_finder_index_path, :html  => { :class => "formtastic form-inline", :method => :get} do |f|
        .well
          %span.sponsors_near
            = t('find_sponsors')
          = f.label :radius, "Radius"
          = f.text_field :radius, id: "radius", name: "sponsor_finder_radius"
          = f.hidden_field :lat, value: @project.latitude, id: "lat"
          = f.hidden_field :lng, value: @project.longitude, id: "lng"
          = f.submit :class => "btn pull-right"
          -# = link_to t('find_sponsors'), sponsor_finder_index_path(:lat => @project.latitude, :lng => @project.longitude), :class => "btn pull-right"

