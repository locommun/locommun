
<!--Place the Text for flyer1 -->
<div class="vertical">
		<h3><%= @announcement.billboard.name[0..20] %></h3>
		<div class="upper_space">
			<h2> <%= @announcement.name[0..20] %></h2>
		</div>
		<p class="break-word">
			<%= @announcement.description[0..500]%>...
		</p>
			<p >
				<strong>Link zu dieser Aktivität:</strong>
			</p>
			<h4 class="break-word"><%= polymorphic_url(@announcement) %></h4>
		<br />
</div>

