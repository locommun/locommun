<!--Place the powered-by for flyer1 -->
<p class="powered_by">powered by Locommun.eu</p>

<!--Place the powered-by for flyer2 -->
<p class="powered_by powered_by2">powered by Locommun.eu</p>

<!--Place the stubs for flyer1 -->
<div class="stub">
	<% for i in 1..7%>
		<% distanz = i*17 %>
		<p class="break-word" style=" position: relative;  top: <%= distanz %>; ">
			<small><%= polymorphic_url(@announcement) %></small>
		</p>
	<%end%>
</div>

<!--Place the stubs for flyer2 -->
<div class="stub stub2">
	<% for i in 1..7%>
		<% distanz = i*14 %>
		<p class="break-word" style=" position: relative;  top: <%= distanz %>; ">
			<small><%= polymorphic_url(@announcement) %></small>
		</p>
	<%end%>
</div>

<!--Place the QR-Code for flyer1 -->
<div class="qrcode1">	
	<% qrcode_url= polymorphic_url(@announcement) %>
	<%= qrcode qrcode_url  , :level => :l , :size => 3 %>
</div>


