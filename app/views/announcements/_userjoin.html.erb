<div class="billboard-controlls well">
	<h4><%= I18n.t("announcement.userjoin.title") %></h4>
		
		<% @announcement.userjoins.each do |userjoin| %>
				<b><%= userjoin.user.name %></b>,
		<%end%>
		<hr/>
		
		<%if current_user && !(@announcement.joined? current_user) %>
			<%= simple_form_for(@announcement.userjoins.build) do |f| %>		
			  <div class="form-inputs">
			  	<%= f.input :announcement_id , :as => :hidden %>
			  </div>
			  	<%= f.submit I18n.t("announcement.userjoin.button") , :class => "btn btn-primary"%>	  
			<% end %>
		<%end%>	
</div>
