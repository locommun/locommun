.well
  %h2= I18n.t("devise.registrations.new.title")
  = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-vertical"}) do |f|
    = f.inputs do
      = f.input :name, :required => true, :autofocus => true  , :label => I18n.t("devise.registrations.name")
      = f.input :email, :required => true  , :label => I18n.t("devise.registrations.email")
      = f.input :password, :required => true , :label => I18n.t("devise.registrations.password")
      = f.input :password_confirmation, :required => true , :label => I18n.t("devise.registrations.password_confirm")
    = f.actions do
      = f.action :submit, :label => I18n.t("devise.registrations.register")  ,:class => "btn btn-primary"
  = render "links"
