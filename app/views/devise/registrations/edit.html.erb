<div class="row">
	<div class="span12">
		<div class="well">
		<h2>Benutzerprofil bearbeiten</h2>
		
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
		  <%= f.error_notification %>
		
		  <div class="inputs">
		  	<%= f.input :name, :required => true, :autofocus => true , :label => "Name"%>
		    <%= f.input :email, :required => true , :label => "E-Mail"%>
		    <%= f.input :password, :autocomplete => "off", :label => "Passwort",:hint => "leer lassen wenn es nicht geändert werden soll!", :required => false %>
		    <%= f.input :password_confirmation, :required => false , :label => "Passwort bestätigen"%>
		    <%= f.input :current_password, :label => "Aktuelles Passwort", :hint => "aktuelles Passwort zur Bestätigung eingeben", :required => true %>
		  </div>
		
		  <div class="actions">
		  		<button class="btn btn-primary"> Ändern </button>
		  </div>
		<% end %>

		</div>
	</div>
	<div class="span12">
		<%= link_to (raw ("<i  class=\"icon-chevron-left\"></i>Zurück zum Profil")), announcements_path , :class => "btn"  %>
	</div>
</div>