.well
  %h2= I18n.t("devise.registrations.edit.forgot_password" )
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = f.error_notification
    .inputs
      = f.input :email, :required => true , :label => I18n.t("devise.registrations.email")
    .actions
      = f.button :submit, I18n.t("devise.registrations.edit.create_new_password" )
  = render "links"
