.well
  %h2= I18n.t("devise.registrations.edit.change_password" )
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = f.error_notification
    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token
    .inputs
      = f.input :password, :label => I18n.t("devise.registrations.edit.password.label"), :required => true
      = f.input :password_confirmation, :label => I18n.t("devise.registrations.edit.password.confirmation_label"), :required => true
    .actions
      = f.button :submit, :label => I18n.t("devise.registrations.edit.password.change")
  = render "links"
