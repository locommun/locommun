<div class= "row">
	<div class="span12" id="navigation-announcemnet">
		<%= link_to (raw ("<i  class=\"icon-chevron-left\"></i> "+ I18n.t("common.home" ))), billboards_path ,  :class =>"btn"%>
		<%= link_to (raw ("<i  class=\"icon-chevron-left\"></i> "+ I18n.t("common.billboard" ))), billboard_path(@announcement.billboard) ,  :class =>"btn"%>
		<%if (current_user && @announcement.billboard.is_activated?(current_user) )%>
					<%= link_to (raw ("<i  class=\"icon-print icon-white \"></i> "+ I18n.t("announcement.print" ))), announcement_path(:id => @announcement.id, :format => :pdf) ,:class => "btn btn-primary" %>
				<%end%>
		<%if current_user && @announcement.user == current_user%>
			<%= link_to (raw ("<i  class=\"icon-edit\"></i> "+ I18n.t("common.edit" ))), edit_announcement_path(@announcement) , :class => "btn"%>
		<%end%>
	</div>
</div>
<div class="row">
	<div class="span6">	
			<div class="well break-word billboard-controlls">			
				<h1><%= @announcement.name %></h1>
				<p>
					<%= @announcement.description %>
				</p>
			</div>
			<div>
				<% @announcement.comments.each do |comment| %>
					<% if (!comment.private) || (current_user && comment.private && @announcement.billboard.is_activated?(current_user)) %>
						<div class="alert alert-info">
							<% if comment.user %>
							<strong>
							<Anonym>
								<%= comment.user.name %>:
							</strong> <%= comment.text %>
							<%else%>
							<strong><%= I18n.t("announcement.comment.anonym" ) %></strong> <%= comment.text %>
							<%end%>
						</div>
					<%end%>
				<%end%>
			</div>
			<%=render '/announcements/comment'%>
		</div>
		<% if user_signed_in? && @announcement.billboard.is_activated?(current_user) %>
		<div class="span3">
			<%if @announcement.longitude && @announcement.latitude  %>
				<%=render '/announcements/location' %>
			<%end%>
			<%if @announcement.location != "" && @announcement.location %>
				<div class="billboard-controlls well">
					<h4><%= I18n.t("announcement.location") %></h4> 
					<%=@announcement.location%>
				</div>
			<%end%>
			<%if @announcement.datetime %>
				<%=render '/announcements/datetime' %>
			<%end%>
			<%if user_signed_in? && @announcement.datetime_module %>
				<%=render '/announcements/datetime_suggestion' %>
			<%end%>
		</div>
		<div class="span3">	
			<%if @announcement.uj %>
				<%=render '/announcements/userjoin'%>
			<%end%>
			<%if @announcement.bt %>
				<%=render '/announcements/bringthing'%>
			<%end%>
		</div>
		<%else%>
		<div class="span6">
			<%=render '/partial/request_activate_text'%>
			<div class="billboard-controlls well">
				<%=render '/partial/map'%>
			</div>
		</div>
		<%end%>
		
	</div>
</div>
